
@{
    ViewData["Title"] = "AllUsers";
}

<h1>AllUsers</h1>
<table border="1">
    <thead>
        <tr>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Email</th>
            <th>Password</th> <!-- Please be cautious about displaying passwords in a real application! -->
            <th>Role</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in ViewBag.Users)
        {
            <tr>
                <td>@user.FirstName</td>
                <td>@user.LastName</td>
                <td>@user.Email</td>
                <td>@user.Password</td> <!-- Again, avoid displaying passwords! -->
                <td>@user.Role</td>
            </tr>
        }
    </tbody>
</table>

